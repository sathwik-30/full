import java.time.LocalDate;
import com.dao.mineopsdao;
import com.entity.equipment;
import com.entity.minesite;
import com.dao.equipmentdao;


public class MainApp 
{

    public static void main(String[] args) 
    {
    	int ch=2;
    	if(ch==1)
    	{
    		minesite mine = new minesite();
            mine.setMineId(1);
            mine.setName("AI");
            mine.setLocation("Nellore");
            mine.setStatus("ACTIVE");

            mineopsdao dao = new mineopsdao();
            dao.save(mine);

            System.out.println("MineSite inserted successfully!");
    	}
    	else if(ch==2)
    	{
    		equipment e=new equipment();
    		e.setEquipmentId(1);
    		e.setMineId(1);
    		e.setName("ABC");
    		e.setPurchaseDate(LocalDate.now());
    		e.setStatus("ACTIVE");
    		e.setType("Mining machine");
    		
    		equipmentdao dao=new equipmentdao();
    		dao.save(e);
    		System.out.println("Equipment inserted successfully");
    	}
    	
    }
}
