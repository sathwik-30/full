<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- 1) JDBC Driver -->
        <property name="hibernate.connection.driver_class">
            com.mysql.cj.jdbc.Driver
        </property>

        <!-- 2) Database URL -->
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/wareops?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC
        </property>

        <!-- 3) DB Credentials -->
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">ch_sathwik_15</property>

        <!-- 4) Dialect -->
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <!-- 5) SQL Logging -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- 6) DDL Strategy (IMPORTANT CHANGE) -->
        <!-- validate = Hibernate will NOT change tables -->
        <property name="hibernate.hbm2ddl.auto">validate</property>

        <!-- 7) Entity Mappings -->

        <!-- Master Entities -->
        <mapping class="com.demo.entity.Warehouse"/>
        <mapping class="com.demo.entity.Supplier"/>
        <mapping class="com.demo.entity.Customer"/>
        <mapping class="com.demo.entity.Product"/>

        <!-- Warehouse Structure -->
        <mapping class="com.demo.entity.Bin"/>

        <!-- Inbound -->
        <mapping class="com.demo.entity.PurchaseReceipt"/>
        <mapping class="com.demo.entity.PurchaseItem"/>

        <!-- Stock -->
        <mapping class="com.demo.entity.StockLedger"/>

        <!-- Sales -->
        <mapping class="com.demo.entity.SalesOrder"/>
        <mapping class="com.demo.entity.OrderItem"/>

        <!-- Dispatch & Returns -->
        <mapping class="com.demo.entity.Dispatch"/>
        <mapping class="com.demo.entity.ReturnLog"/>

    </session-factory>
</hibernate-configuration>
